{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "outDir": "./public/js",
    "rootDir": "./src"
  }
}
